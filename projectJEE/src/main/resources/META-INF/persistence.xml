<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd">
	<persistence-unit name="projectJEE" transaction-type="JTA">
	
	<jta-data-source>projectJEEDS</jta-data-source>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.User</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Giocatore</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Anagrafica</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Arbitro</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Calendario</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Designazione</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Partita</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Referto</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Squadra</class>
	<class>it.unifi.dinfo.stdlab.projectJEE.model.Designatore</class>
	
	
	
	<exclude-unlisted-classes>true</exclude-unlisted-classes>
	
	<properties>
	
                    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
                    <property name="hibernate.show_sql" value="true"/>
                    <property name="hibernate.format_sql" value="true"/>
                    <property name="hibernate.default_batch_fetch_size" value="16"/>                            
                    <property name="hibernate.use_sql_comments" value="true"/>
                    <property name="hibernate.jdbc.batch_size" value="100"/>
                
                    <property name="hibernate.order_insert" value="true"/>
					<property name="hibernate.order_updates" value="true"/>
                    <property name="hibernate.id.new_generator_mappings" value="true"/>

                    <property name="hibernate.hbm2ddl.auto" value="create"/>
                    
                </properties>
	
	</persistence-unit>
</persistence>
